@{
	ViewData["Title"] = "CreatePassword";
}
@model ResetPasswordVM

<div class="row">
	<div class="col-md-8">
		<div class="card">
			<div class="card-header">
				<h3 class="card-title">Şifre Oluştur</h3>
			</div>
			<form asp-action="CreatePassword">
				<input type="hidden" asp-for="Token" />
				<input type="hidden" asp-for="Email" />

				<div class="card-body">					
					<div>
						<label asp-for="NewPassword" class="form-label"></label>
						<input type="password" asp-for="NewPassword" class="form-control" />
						<span asp-validation-for="NewPassword" class="text-danger"></span>
					</div>
					<div>
						<label asp-for="CheckNewPassword" class="form-label"></label>
						<input type="password" asp-for="CheckNewPassword" class="form-control" />
						<span asp-validation-for="CheckNewPassword" class="text-danger"></span>
					</div>

				</div>
				<div class="card-footer d-flex align-items-center justify-content-between" style="height:50px">
					<a asp-controller="Home" asp-action="Index" class="btn btn-outline-dark">Geri Dön</a>
					<button type="submit" class="btn btn-outline-success">Kaydet</button>
				</div>
			</form>
		</div>
	</div>
</div>