@{
    ViewData["Title"] = "Update Student";
}
@model UpdateStudentVM

@{
    var imagePath = string.IsNullOrEmpty(Model.ImagePath) ? "noimage.png" : Model.ImagePath;
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Yeni Öğrenci Ekle</h3>
            </div>
            <form asp-action="UpdateStudent" enctype="multipart/form-data">
                <input type="hidden" asp-for="ImagePath" />
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12 d-flex flex-column align-items-center">
                            <img class="my-2 rounded-circle" id="studentImg" width="100" height="100" src="~/img/uploads/@imagePath" />
                            <input onchange="studentUploadImage(this)" asp-for="Image" class="form-control w-50" />
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>
                    </div>

                    <div>
                        <label asp-for="FirstName" class="form-label"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="LastName" class="form-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Birthdate" class="form-label"></label>
                        <input type="date" asp-for="Birthdate" class="form-control" />
                        <span asp-validation-for="Birthdate" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="RegisterPrice" class="form-label"></label>
                        <input asp-for="RegisterPrice" class="form-control" />
                        <span asp-validation-for="RegisterPrice" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="CourseId" class="form-label"></label>
                        <select onchange="loadTeachersByCourseId(this.value)" asp-for="CourseId" asp-items="ViewBag.Courses" class="form-control">
                            <option selected disabled value="0">Bir kurs seçiniz!</option>
                        </select>
                        <span asp-validation-for="CourseId" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="TeacherId" class="form-label"></label>
                        <select disabled id="teachers" onchange="loadClassroomsByTeacherId(this.value)" asp-for="TeacherId" class="form-control">
                        </select>
                        <span asp-validation-for="TeacherId" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="ClassroomId" class="form-label"></label>
                        <select disabled id="classrooms" asp-for="ClassroomId" class="form-control">
                        </select>
                        <span asp-validation-for="ClassroomId" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between" style="height:50px">
                    <a asp-action="Index" class="btn btn-outline-dark">Geri Dön</a>
                    <button type="submit" class="btn btn-outline-success">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            const courseId = "@Model.CourseId";
            const teacherId = "@Model.TeacherId";
            const classroomId = "@Model.ClassroomId";
            console.log(courseId, teacherId, classroomId)
            console.log("Çalıştı")
            loadTeachersByCourseId(courseId, teacherId, classroomId);
        })
    </script>
}