@{
	ViewData["Title"] = "Students Index";
}
@model List<GetStudentForClassroomVM>

<div class="row">
	<div class="col-md-12">
		<div class="my-3">
			<span class="text-center">
				<a  asp-action="MyClassrooms" class="btn btn-primary profile-button"><i class="fa-solid fa-circle-arrow-left"></i> Geri Dön</a>
			</span>
		</div>
		<div class="card">
			<div class="card-header">
				<h3 class="card-title">Öğrenciler</h3>
			</div>
			<div class="card-body">
				<div class="table-responsive">
					<table class="table table-bordered">
						<thead>
							<tr>
								<th>Öğrenci</th>
								<th>Ortalama</th>
								<th>Durum</th>
								<th>Detay</th>

							</tr>
						</thead>
						<tbody>
							@foreach (var student in Model)
							{
								<tr>
									<td>@student.FullName</td>
									<td>@student.Average</td>
									<td>@student.StudentStatus</td>
									<td>
										<a asp-controller="Students" asp-action="StudentDetail" asp-route-id="@student.Id" class="btn btn-outline-success">Detay</a>
									</td>

								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>